@{
    ViewData["Title"] = "Registrácia";
}

<component type="typeof(Splitter)" param-File="@("1.jpg")" render-mode="ServerPrerendered" />

<div class="dark-background padding-heavy text-center light-text bright-color">
    <h1 class="heavy-text mb-3">
        REGISTRÁCIA
    </h1>
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Register">
        <div class="form-group row padding-light">
            <label class="col-lg-2 col-form-label">Mail</label>
            <div class="col-lg-10">
                <input type="text" class="form-control light-border bright-border dark-background bright-color rounded-0" name="Mail">
            </div>
        </div>
        <div class="form-group row padding-light">
            <label class="col-lg-2 col-form-label">Meno</label>
            <div class="col-lg-10">
                <input type="text" class="form-control light-border bright-border dark-background bright-color rounded-0" name="Name">
            </div>
        </div>
        <div class="form-group row padding-light">
            <label class="col-lg-2 col-form-label">Priezvisko</label>
            <div class="col-lg-10">
                <input type="text" class="form-control light-border bright-border dark-background bright-color rounded-0" name="Surname">
            </div>
        </div>
        <div class="form-group row padding-light">
            <label class="col-lg-2 col-form-label">Telefónne číslo</label>
            <div class="col-lg-10">
                <input type="text" class="form-control light-border bright-border dark-background bright-color rounded-0" name="Phone">
            </div>
        </div>
        <div class="form-group row padding-light">
            <label class="col-lg-2 col-form-label">Heslo</label>
            <div class="col-lg-10">
                <input type="password" class="form-control light-border bright-border dark-background bright-color rounded-0" name="Password">
            </div>
        </div>
        <div class="form-group row padding-light">
            <label class="col-lg-2 col-form-label">Potvrdenie hesla</label>
            <div class="col-lg-10">
                <input type="password" class="form-control light-border bright-border dark-background bright-color rounded-0" name="Confirmation">
            </div>
        </div>
        <button type="submit" value="Submit" class="highlight btn btn-primary light-border bright-border dark-background bright-color rounded-0 m-3 light-text">PRIHLÁSIŤ</button>
    </form>
    <a class="error-color">@ViewBag.Reply</a>
    <a class="nav-link bright-color light-text" asp-area="" asp-controller="Home" asp-action="Login">už mám účet a chcem sa prihlásiť</a>
</div>

<component type="typeof(Splitter)" param-File="@("2.jpg")" render-mode="ServerPrerendered" />