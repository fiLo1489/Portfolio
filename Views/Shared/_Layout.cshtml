@using SemestralnaPraca.Controllers
@inject IHttpContextAccessor context;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <meta name="author" content="Filip Zaťko">
    <meta name="keywords" content="fotografia, fotograf, fotenie">
    <link href="~/style.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-xl navbar-dark sticky-top bright-background px-3">
            <div class="navbar-collapse collapse w-100 order-1 order-xl-0 dual-collapse2">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Wedding">SVADBY</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Event">PODUJATIA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Car">VOZIDLÁ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Nature">PRÍRODA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Other">INÉ</a>
                    </li>
                </ul>
            </div>
            <div class="mx-auto order-0 padding-light">
                <a class="navbar-brand mx-auto dark-color light-text" asp-area="" asp-controller="Home" asp-action="Index">FZ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".dual-collapse2">
                    <i class="bi bi-list dark-color"></i>
                </button>
            </div>
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="About">O MNE</a>
                    </li>
                    @if (string.IsNullOrEmpty(@context.HttpContext.Session.GetString(SessionVariables.Mail)))
                    { 
                        <li class="nav-item">
                            <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Login">PRIHLÁSENIE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Register">REGISTRÁCIA</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Account">ÚČET</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link dark-color light-text" asp-area="" asp-controller="Home" asp-action="Logout">ODHLÁSENIE</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer>
        <div class="dark-background d-flex flex-column padding-heavy bright-color text-center">
            <h2 class="heavy-text bright-color">
                FILIP ZAŤKO
            </h2>
            <a class="margin-light light-text bright-color" href="https://www.instagram.com/filip.zzzzz/">
                <i class="bi bi-instagram"></i>
                filip.zzzzz
            </a>
            <a class="bright-color light-text" href="https://www.facebook.com/filip.zzzzz/">
                <i class="bi bi-facebook"></i>
                Filip Zaťko
            </a>
            <a class="margin-light bright-color light-text" href="tel:+421950422776">
                <i class="bi bi-phone"></i>
                +421 950 422 776
            </a>
            <a class="bright-color light-text" href="mailto:filip.zatko.1489@gmail.com">
                <i class="bi bi-envelope"></i>
                filip.zatko.1489@gmail.com
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
